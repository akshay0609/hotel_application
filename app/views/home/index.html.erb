<header style="margin-top: 7%">
  <div class="bs-example">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Carousel indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
      <!-- Wrapper for carousel items -->
      <div class="carousel-inner">
        <div class="item active">
          <img src="http://as1.wdpromedia.com/media/rundisney/travel/travel-media-hero-dlr-1200x300-01.jpg" alt="First Slide">
        </div>
        <div class="item">
          <img src="http://www.ellegado.com.mx/cms/images/resized/images/stories/slideshow/resort/foto06_1200_300.jpg" alt="Second Slide">
        </div>
        <div class="item">
          <img src="http://www.vidanatural.org.br/site/images/resized/images/stories/slideshow/tp06x_1200_300.jpg" alt="Third Slide">
        </div>
      </div>
      <!-- Carousel controls -->
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
  </div>
</header>

<!-- Title -->
<div class="row">
  <div class="col-lg-12">
    <h3>Rooms</h3>
  </div>
</div>
<!-- /.row -->

<!-- Room Features -->
<div class="row text-center">

  <div class="col-md-3 col-sm-6 hero-feature">
    <div class="thumbnail">
      <img src="https://gc.synxis.com//hotel/57895/Images/Room/Deluxe%20room.jpg" alt="Deluxe Room">
      <div class="caption">
        <h3>Deluxe Room</h3>
        <p>Queen Size Bed.</p>
        <p>
          <%= link_to 'Book Now!', new_booking_path(:room_type => "Deluxe Rooms"),class: "btn btn-primary"%>
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-3 col-sm-6 room-feature">
    <div class="thumbnail">
      <img src="http://images.kuoni.co.uk/73/sofitel-dubai-the-palm-resort-and-spa-31549974-1464100922-ImageGalleryLightbox.jpg" alt="Luxury Room">
      <div class="caption">
        <h3>Luxury Room</h3>
        <p>Queen Size Bed and Pool Facing.</p>
        <p>
          <%= link_to 'Book Now!', new_booking_path(:room_type => "Luxury Rooms"),class: "btn btn-primary"%>
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-3 col-sm-6 room-feature">
    <div class="thumbnail">
      <img src="http://www.smartervegas.com/images/rooms/244/263/venetian-luxury-suite-1.jpg" alt="Luxury Suites">
      <div class="caption">
        <h3>Luxury Suites</h3>
        <p>King Size Bed and Pool Facing.</p>
        <p>
          <%= link_to 'Book Now!', new_booking_path(:room_type => "Luxury Suites"),class: "btn btn-primary"%>
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-3 col-sm-6 room-feature">
    <div class="thumbnail">
      <img src="http://www.lovelybalivillas.com/wp-content/uploads/2015/02/Villa-Issi-Gym.jpg" alt="Presidential Suites">
      <div class="caption">
        <h3>Presidential Suites</h3>
        <p>King Size Bed, Pool Facing, Gym.</p>
        <p>
          <%= link_to 'Book Now!', new_booking_path(:room_type => "Presidential Suites"), class: "btn btn-primary"%>
        </p>
      </div>
    </div>
  </div>

</div>
<!-- /.row -->